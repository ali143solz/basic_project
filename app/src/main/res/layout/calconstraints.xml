        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/btn9_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/result"
        android:layout_toRightOf="@id/btn8_id"
