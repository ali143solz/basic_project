        android:text="6"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/btndiv_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
